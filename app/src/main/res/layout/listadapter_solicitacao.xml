<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tv_tipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo de solicitação"
        android:textColor="#00a7f5"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status da solicitação"
        android:textColor="#f92a3f"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_dataCriacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data da criação"
        android:textColor="#000"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tv_dataAtualizacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data de atualização"
        android:textColor="#000"
        android:textSize="16dp" />

</LinearLayout>